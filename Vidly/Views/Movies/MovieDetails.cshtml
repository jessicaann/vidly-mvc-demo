@model Vidly.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>